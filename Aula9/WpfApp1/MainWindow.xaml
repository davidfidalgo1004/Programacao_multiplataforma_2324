<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Gestão Ficheiros" Height="157" Width="302" Loaded="Window_Loaded">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Escola:" VerticalAlignment="Top"/>
        <TextBox x:Name="tbEscola" HorizontalAlignment="Left" Margin="50,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="242"/>
        <GroupBox Header="Departamento" Margin="10,29,10,59">
            <ComboBox x:Name="cbDepartamentos" HorizontalAlignment="Center" Width="239" SelectionChanged="cbDepartamentos_SelectionChanged"/>
        </GroupBox>
        <StatusBar Margin="0,109,0,0">
            <StatusBarItem x:Name="sbiDocentes" Content="Nº Docentes: ?" Height="32" VerticalAlignment="Center"/>
        </StatusBar>

    </Grid>
</Window>
